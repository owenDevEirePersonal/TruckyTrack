<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/mapText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        map:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp"/>

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:layout_marginRight="8dp"
        map:layout_constraintRight_toRightOf="parent"
        map:layout_constraintLeft_toRightOf="@+id/mapText"
        android:layout_marginLeft="8dp"
        map:layout_constraintHorizontal_bias="1.0"
        map:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        />

    <EditText
        android:id="@+id/kegIDEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="65dp"
        android:ems="10"
        android:inputType="textNoSuggestions"
        android:text="Keg ID"
        map:layout_constraintHorizontal_bias="1.0"
        map:layout_constraintLeft_toRightOf="@+id/mapText"
        map:layout_constraintRight_toRightOf="parent"
        map:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/scanKegButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan Keg"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="10dp"
        map:layout_constraintTop_toBottomOf="@+id/mapText"/>

    <Button
        android:id="@+id/clearStoredAddressButton"
        android:layout_width="130dp"
        android:layout_height="76dp"
        android:layout_marginTop="11dp"
        android:text="Clear Stored Address"
        map:layout_constraintTop_toBottomOf="@+id/scanKegButton"
        android:layout_marginLeft="0dp"
        map:layout_constraintLeft_toLeftOf="@+id/scanKegButton"
        map:layout_constraintRight_toLeftOf="@+id/kegIDEditText"
        android:layout_marginRight="0dp"
        map:layout_constraintHorizontal_bias="0.0"/>
</android.support.constraint.ConstraintLayout>

