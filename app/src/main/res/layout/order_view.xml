<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/patronName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Name"
        app:layout_constraintTop_toTopOf="@+id/patronPhoto"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/patronPhoto"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:id="@+id/drinkCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="0"
        android:translationZ="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/drinkCounterImage"
        app:layout_constraintLeft_toLeftOf="@+id/drinkCounterImage"
        app:layout_constraintRight_toRightOf="@+id/drinkCounterImage"
        app:layout_constraintTop_toTopOf="@+id/drinkCounterImage"/>

    <TextView
        android:id="@+id/patronPreferedDrink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drink"
        app:layout_constraintLeft_toRightOf="@+id/patronName"
        android:layout_marginLeft="32dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/patronPhoto"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.521"/>

    <ImageView
        android:id="@+id/patronPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ad_rabbit"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"/>

    <ImageView
        android:id="@+id/drinkCounterImage"
        android:layout_width="39dp"
        android:layout_height="33dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:translationZ="-1dp"
        app:layout_constraintLeft_toRightOf="@+id/patronPhoto"
        app:layout_constraintTop_toBottomOf="@+id/patronName"
        app:srcCompat="@mipmap/ad_rabbit"/>

    <ImageButton
        android:id="@+id/dismissButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        app:srcCompat="@drawable/ic_close_light"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"/>
</android.support.constraint.ConstraintLayout>

