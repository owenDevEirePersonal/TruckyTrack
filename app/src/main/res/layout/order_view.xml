<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">


    <TextView
        android:id="@+id/patronName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="John Name"
        android:textColor="@color/cast_expanded_controller_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/patronPhoto"
        app:layout_constraintTop_toTopOf="@+id/patronPhoto"
        app:layout_constraintVertical_bias="0.0"/>

    <TextView
        android:id="@+id/balanceText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:text="0.00â‚¬"
        android:textColor="@color/cast_expanded_controller_text_color"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="@+id/patronPhoto"
        app:layout_constraintRight_toRightOf="@+id/patronPhoto"
        app:layout_constraintTop_toBottomOf="@+id/patronPhoto"
        />

    <TextView
        android:id="@+id/drinkCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="0"
        android:textColor="@color/colorPrimaryDark"
        android:translationZ="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/drinkCounterImage"
        app:layout_constraintLeft_toLeftOf="@+id/drinkCounterImage"
        app:layout_constraintRight_toRightOf="@+id/drinkCounterImage"
        app:layout_constraintTop_toTopOf="@+id/drinkCounterImage"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/patronPreferedDrink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="Drink"
        android:textColor="@color/cast_expanded_controller_progress_text_color"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/patronName"
        app:layout_constraintRight_toLeftOf="@+id/dismissButton"
        app:layout_constraintTop_toTopOf="@+id/patronName"/>

    <TextView
        android:id="@+id/serialCodeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="----"
        android:textColor="@color/cast_expanded_controller_progress_text_color"
        app:layout_constraintRight_toRightOf="@+id/dismissButton"
        app:layout_constraintTop_toBottomOf="@+id/dismissButton"/>

    <ImageView
        android:id="@+id/patronPhoto"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/profileicon2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/profileicon2"/>

    <ImageView
        android:id="@+id/drinkCounterImage"
        android:layout_width="48dp"
        android:layout_height="46dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/drinkcountericon2"
        android:translationZ="-1dp"
        app:layout_constraintLeft_toRightOf="@+id/patronPhoto"
        app:layout_constraintTop_toBottomOf="@+id/patronName"
        app:srcCompat="@drawable/drinkcountericon2"/>

    <ImageButton
        android:id="@+id/dismissButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/ic_close_dark"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close_dark"/>

    <ImageButton
        android:id="@+id/addAnotherButton"
        android:layout_width="41dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:backgroundTint="@android:color/transparent"
        android:src="@android:drawable/ic_input_add"
        app:layout_constraintBottom_toBottomOf="@+id/drinkCounterImage"
        app:layout_constraintLeft_toRightOf="@+id/drinkCounterImage"
        app:layout_constraintTop_toTopOf="@+id/drinkCounterImage"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:drawable/ic_input_add"
        />

    <ImageView
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:src="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drinkCounterImage"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@color/colorPrimary"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

</android.support.constraint.ConstraintLayout>

